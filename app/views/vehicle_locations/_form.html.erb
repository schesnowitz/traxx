<%= simple_form_for(@vehicle_location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :location_id %>
    <%= f.input :located_at %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :bearing %>
    <%= f.input :engine_hours %>
    <%= f.input :driver_id %>
    <%= f.input :fuel %>
    <%= f.input :odometer %>
    <%= f.input :speed %>
    <%= f.input :location_description %>
    <%= f.input :movement_type %>
    <%= f.input :driver_first_name %>
    <%= f.input :driver_last_name %>
    <%= f.input :driver_username %>
    <%= f.input :driver_company_id %>
    <%= f.input :driver_status %>
    <%= f.input :driver_role %>
    <%= f.input :edl_id %>
    <%= f.input :edl_identifier %>
    <%= f.input :edl_model %>
    <%= f.input :date %>
    <%= f.input :driver_profile_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
