<%= simple_form_for(@driver_profile) do |f| %>
<%= f.error_notification %>

    <div class="row">
      <div class="col-sm-6 col-md-4">
        <div class="form-group">
          <%= f.input :email %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :username %>
        </div>
      </div>
      <div class="col-sm-6 col-md-4">
        <div class="form-group">
          <%= f.input :phone %>
          <%= f.input :phone_ext %>
          <%= f.input :emergency_contact_name %>
          <%= f.input :emergency_contact_phone %>
        </div>
      </div>
      <div class="col-sm-6 col-md-4">
        <div class="form-group">
          <label>Time Zone</label><br>
          <%= f.select :time_zone, DriverProfile::TIME_ZONE %><br><br><br>  
          <label>Role</label><br>
          <%= f.select :role, DriverProfile::DRIVER_ROLE %><br><br><br>
          <label>Violation Alerts Sent Every</label><br>
          <%= f.select :violation_alerts, DriverProfile::VIOLATION_ALERTS %><br><br><br>
          <label>Status</label><br>
          <%= f.select :status, DriverProfile::DRIVER_STATUS %>
        </div>
      </div>
      <div class="col-sm-6 col-md-4">
        <div class="form-group">
          <%= f.input :carrier_name, input_html: { value: @app_setting.try(:carrier_name) }, readonly: true  %>
          <%= f.input :carrier_street, input_html: { value: @app_setting.try(:carrier_street) }, readonly: true  %>
          <%= f.input :carrier_city, input_html: { value: @app_setting.try(:carrier_city) }, readonly: true  %>
          <label>Carrier State</label><br>
          <%= f.input :carrier_state, input_html: { value: @app_setting.try(:carrier_state) }, readonly: true  %><br><br>
          <%= f.input :carrier_zip, input_html: { value: @app_setting.try(:carrier_zip) }, readonly: true  %>
        </div>
      </div>
      <div class="col-sm-6 col-md-4">
        <div class="form-group">
          <%= f.input :terminal_id, as: :select, class: "form-group", collection:  @app_setting.terminals, value_method: :id, prompt: 'Select Terminal' 
            %> 
        </div>
      </div>
      <div class="col-sm-6 col-md-4">
        <div class="form-group">
          <label>Driver Profile Image</label><br>
          <%= f.input :image, as: :file, label: false %>
          <%= f.input :drivers_license_number %>
          <label>License State | Provence</label><br>
          <%= f.select :drivers_license_state, DriverProfile::StateProvence %>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
</div>
</div>
<% end %>