<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>
<%= form_tag vehicles_path, method: :get do %> 
<%= text_field_tag :search_data, params[:search_data] %>
<%= submit_tag 'Search', class: 'btn btn-outline-info', name: nil %> 
<% end %>

<table class='table-striped table-bordered' id='vehicle-index-table'>
  <thead>
    <tr>
      <th>Driver</th>
      <th>API ID</th>
      <th>Number</th>
      <th>Status</th>
      <th>Ifta</th>
      <th>Vin</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Plate State</th>
      <th>Plate Number</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= "#{vehicle.driver_first_name} #{vehicle.driver_last_name}" %></td>
        <td><%= vehicle.api_id %></td>
        <td><%= vehicle.number %></td>
        <td><%= vehicle.status %></td>
        <td><%= vehicle.ifta %></td>
        <td><%= vehicle.vin %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.license_plate_state %></td>
        <td><%= vehicle.license_plate_number %></td>
        
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path %><br>

