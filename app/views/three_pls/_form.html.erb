
<%= simple_form_for(@three_pl) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :fax %>
    <%= f.input :email %>
    <%= f.input :use_main_address %>
    <%= f.input :website %>
    <%= f.input :contact_name %>
    <%= f.input :notes %>
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :postal_code %>
    <%= f.input :dot %>
    <%= f.input :mc %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
